<% if @current_user %>
<div class="row">
<h2>Places</h2>
</div>

<div class="row">
  <ul class="list-group">
    <% for place in @places %>
      <li class="list-group-item"><a href="/places/<%= place.id %>"><%= place.name %></a></li>
    <% end %>
  </ul>
</div>
<div class="row">
  <p>
    <a class="btn btn-success" href="/places/new">New place</a>
  </p>
</div>
<% else %>
  You must first <a href="/sessions/new">login</a> to view places you visited.
<% end %>