<% if @current_user %>
  <h1><%= @place.name %></h1>

  <div class="row">
   <h2>My Posts</h2>
  <% for post in @place.posts %>
    <div class="col-md-3 col-sm-6">
      <h3><%= post.title %></h3>

      <% if post.uploaded_image.attached? %>
        <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
      <% else %>
        <img src="<%= post.image %>" class="img-fluid">
      <% end %>

      <p><%= post.posted_on %></p>

      <p><%= post.description %></p>
    </div>
  <% end %>
</div>

 <div class="row">
  <p>
    <a href="/posts/new?place_id=<%= @place.id %>">New Post</a>
  </p>
</div>

<div class="row">
  <p>
    <a href="/places">Back to All Places</a>
  </p>
  </div>
<% else %>
  You must first <a href="/sessions/new">login</a> to view your posts.
<% end %>

